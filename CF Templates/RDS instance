environment_variables:
  DB_ENDPOINT: "your-rds-endpoint"
  DB_PORT: 3306
  DB_USERNAME: "jhcairhockey"
  DB_PASSWORD: "jhcgroup"
  DB_NAME: "airhockeydb1"

connect_to_database:
  script: |
    import mysql.connector
    import os

    # Replace these values with your actual RDS endpoint, port, username, and password
    db_endpoint = os.getenv("DB_ENDPOINT")
    db_port = int(os.getenv("DB_PORT", 3306))  # Default to 3306 if not provided
    db_username = os.getenv("DB_USERNAME")
    db_password = os.getenv("DB_PASSWORD")
    db_name = "airhockeydb1"

    # Connect to the database
    try:
        with mysql.connector.connect(
            host=db_endpoint,
            port=db_port,
            user=db_username,
            password=db_password,
            database=db_name
        ) as connection:
            cursor = connection.cursor()

            # Example: Perform a SELECT query
            cursor.execute("SELECT * FROM your_table")
            result = cursor.fetchall()
            print("Fetched data:", result)

            # Add your database operations here

    except mysql.connector.Error as err:
        print(f"Error: {err}")
